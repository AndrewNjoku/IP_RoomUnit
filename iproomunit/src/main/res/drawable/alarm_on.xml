<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#CC0000" android:startColor="#FFFFFF" />

            <corners android:radius="20dp" />

            <stroke android:width="4px" android:color="#FF3333" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FF3333" android:startColor="#FFFFFF" />

            <corners android:radius="20dp" />

            <stroke android:width="4px" android:color="#CC0000" />
        </shape></item>

</selector>