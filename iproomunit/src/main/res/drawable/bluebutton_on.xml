<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#3399FF" android:startColor="#FFFFFF" />

            <corners android:radius="20dp" />

            <stroke android:width="4px" android:color="#3399FF" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
           <gradient android:angle="270" android:endColor="#4747FF" android:startColor="#FFFFFF" />

            <corners android:radius="20dp" />

            <stroke android:width="4px" android:color="#0000CC" />
        </shape></item>

</selector>