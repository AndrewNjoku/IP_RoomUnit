<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:drawable="@drawable/dooropenactive"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#C0C0C0" android:startColor="#FFFFFF" />

            <corners android:radius="10dp" />

            <stroke android:width="4px" android:color="#3399FF" />
        </shape></item>
    <item android:state_pressed="false" android:drawable="@drawable/dooropenpic"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#808080" android:startColor="#FFFFFF" />

            <corners android:radius="10dp" />

            <stroke android:width="4px" android:color="#0000CC" />
        </shape></item>

</selector>