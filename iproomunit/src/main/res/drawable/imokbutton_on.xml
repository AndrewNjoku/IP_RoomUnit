<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#4D9900" android:startColor="#FFFFFF" />

            <corners android:radius="20dp" />

            <stroke android:width="4px" android:color="#00FF00" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
      <gradient android:angle="270" android:endColor="#4D9900" android:startColor="#FFFFFF" />

            <corners android:radius="20dp" />

            <stroke android:width="4px" android:color="#009900" />
        </shape></item>

</selector>
